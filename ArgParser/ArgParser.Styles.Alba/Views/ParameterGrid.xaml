<Div x:Name="div" xml:lang="en-us"
          xmlns="urn:alba:cs-console-format"
          xmlns:colorful="urn:alba:cs-console-format:colorful"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:ap="clr-namespace:ArgParser.Styles.Alba;assembly=ArgParser.Styles.Alba, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
          xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Grid>
        <Grid.Columns>
            <Column Width="Auto"/>
            <Column Width="Auto"/>
            <Column Width="*"/>
        </Grid.Columns>
        <Cell Stroke="Single Double" Color="White">Parameter</Cell>
        <Cell Stroke="Single Double" Color="White">Req</Cell>
        <Cell Stroke="Single Double" Color="White">Description</Cell>
        <Repeater Items="{Get Parameters}">
            <Cell>
                <ap:ParameterUsage Parameter="{Get Base}"  />
            </Cell>
            <Cell>
                <Span Text="{Get RequiredText}" />
            </Cell>
            <Cell>
                <Span Text="{Get Base.Help.ShortDescription}" />
            </Cell>
        </Repeater>
    </Grid>
</Div>


