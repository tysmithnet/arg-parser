<Document x:Name="div" xml:lang="en-us"
     xmlns="urn:alba:cs-console-format"
     xmlns:colorful="urn:alba:cs-console-format:colorful"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:ap="clr-namespace:ArgParser.Styles.Alba;assembly=ArgParser.Styles.Alba, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
     xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Div Color="{Get CurrentTheme.DefaultTextColor}">
        <ap:AsciiArtBanner Title="{Get Parser.Id}" SubTitle="{Get SubTitle}" />
        <Separator Color="{Get CurrentTheme.BorderColor}" />
        <ap:FullUsage Context="{Get Context}" Parser="{Get Parser}" />
        <Separator Color="{Get CurrentTheme.BorderColor}"/>
        <Div>
            <Div>Description:</Div>
            <Span Text="{Get Parser.Help.LongDescription}"></Span>
        </Div>
        <Separator />
        <Div>
            <Div>Parameters:</Div>
            <ap:ParameterGrid Context="{Get Context}" Parser="{Get Parser}" />
        </Div>
        <Div>
            <Div>Examples:</Div>
            <ap:ExampleList Examples="{Get Examples}" />
        </Div>
    </Div>
</Document>


