<Document x:Name="div" xml:lang="en-us"
     xmlns="urn:alba:cs-console-format"
     xmlns:colorful="urn:alba:cs-console-format:colorful"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:ap="clr-namespace:ArgParser.Styles.Alba;assembly=ArgParser.Styles.Alba, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
     xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ap:AsciiArtBanner Title="{Get Parser.Id}" SubTitle="{Get SubTitle}" 
                       GradientStart="{Get Theme.DefaultTextColor}" 
                       GradientMid="{Get Theme.SecondaryTextColor}"
                       GradientEnd="{Get Theme.CodeColor}"/>
    <Separator Color="{Get Theme.BorderColor}" />
    <Div>
        <Div Color="{Get Theme.SecondaryTextColor}">Usage:</Div>
        <ap:FullUsage Context="{Get Context}" Parser="{Get Parser}" />
    </Div>
    
    <Separator Color="{Get Theme.BorderColor}"/>
    <Div>
        <Div Color="{Get Theme.SecondaryTextColor}">Description:</Div>
        <Span Color="{Get Theme.DefaultTextColor}"  Text="{Get Parser.Help.LongDescription}"></Span>
    </Div>
    <Separator />
    <Div>
        <Div Color="{Get Theme.SecondaryTextColor}">Parameters:</Div>
        <ap:ParameterGrid Context="{Get Context}" Parser="{Get Parser}" />
    </Div>
    <Div>
        <Div Color="{Get Theme.SecondaryTextColor}">Examples:</Div>
        <ap:ExampleList Examples="{Get Examples}" />
    </Div>
</Document>


