<Document x:Name="doc" xml:lang="en-us"
          xmlns="urn:alba:cs-console-format"
          xmlns:colorful="urn:alba:cs-console-format:colorful"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Div Visibility="{Get TitleVisibility}">
        <colorful:FigletDiv Text="{Get Title}" ColorGradient="White 0; Yellow; DarkYellow 3"/>
    </Div>
    <Div Visibility="{Get SubTitleVisibility}">
        <Span Color="Red" Text="{Get SubTitle.Length}"  />
    </Div>
</Document>      
    
    
    